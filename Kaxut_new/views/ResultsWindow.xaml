<Window x:Class="Kaxut_new.ResultsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource ResultsTitle}"
        Height="260" Width="420"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{DynamicResource ResultsHeader}"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"/>

        <Border Grid.Row="2" Padding="16" CornerRadius="6"
                Background="#FFF7F7F7" BorderBrush="#FFE0E0E0" BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource CorrectAnswersLabel}" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtCorrect" FontSize="16"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Grid.Row="2" HorizontalAlignment="Center">
                    <TextBlock Text="{DynamicResource TotalScoreLabel}" FontSize="16" FontWeight="SemiBold"/>
                    <TextBlock x:Name="txtScore" FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button x:Name="btnNewGame"
                    Width="140" Height="36"
                    Content="{DynamicResource NewGame}"
                    Click="btnNewGame_Click"/>
        </StackPanel>
    </Grid>
</Window>