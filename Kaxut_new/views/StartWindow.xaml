<Window x:Class="Kaxut_new.views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kaxut" Height="600" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- background -->
        <Image Source="/Images/back_gr_fin.jpg"
               Stretch="UniformToFill"
               Panel.ZIndex="-1" HorizontalAlignment="Center"/>

        <StackPanel Margin="24" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
			<TextBlock FontSize="28" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Text=""/>
			<TextBlock FontSize="16" Margin="0,4,0,20" Foreground="White" HorizontalAlignment="Center"/>

            <Button x:Name="btnNewGame" Content="{DynamicResource NewGame}" FontWeight="Bold" Height="36" Margin="0,0,0,10" Click="btnNewGame_Click"/>
            <Button x:Name="btnLoadGame" Content="{DynamicResource LoadGame}" FontWeight="Bold" Height="36" Margin="0,0,0,10" Click="btnLoadGame_Click"/>
            <Button x:Name="btnExit" Content="{DynamicResource Exit}" Height="36" FontWeight="Bold" Click="btnExit_Click"/>

            <!-- lang switch -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,16,0,0">
                <Button Content="EN" Width="48" Margin="4" Click="LangEn_Click"/>
                <Button Content="RU" Width="48" Margin="4" Click="LangRu_Click"/>
                <Button Content="ET" Width="48" Margin="4" Click="LangEt_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- pers info -->
        <TextBlock Text="{DynamicResource Credits}"
                   FontSize="12"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,12"/>
    </Grid>
</Window>
