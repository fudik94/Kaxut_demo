<Window x:Class="Kaxut_new.views.TitlePromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Save Quiz" Height="180" Width="360" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Enter quiz title:"/>
        <TextBox x:Name="txtTitle" Grid.Row="2"/>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Width="90" Margin="0,0,8,0" Click="Cancel_Click"/>
            <Button Content="Save" Width="90" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
