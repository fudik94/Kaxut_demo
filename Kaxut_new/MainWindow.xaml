<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="Kaxut_new.MainWindow"
        Title="Kahoot Builder" Height="480" Width="640" FontFamily="Segoe UI">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <DropShadowEffect x:Key="ShadowMedium" Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.15"/>

        <Style x:Key="WatermarkTextBox" TargetType="{x:Type TextBox}">
            <Setter Property="BorderBrush" Value="#888"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4" Effect="{StaticResource ShadowMedium}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost"/>
                                <TextBlock Text="{TemplateBinding Tag}" Foreground="Gray" Margin="6,3,0,0"
                                           IsHitTestVisible="False"
                                           Visibility="{Binding Text.IsEmpty, Converter={StaticResource BoolToVisibilityConverter}, RelativeSource={RelativeSource Mode=TemplatedParent}}"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4C7DFF"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="6" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#6D94FF"/>
                                <Setter TargetName="border" Property="Effect" Value="{StaticResource ShadowMedium}"/>
                            </Trigger>

                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3A61CC"/>
                                <Setter TargetName="border" Property="RenderTransform">
                                    <Setter.Value>
                                        <ScaleTransform ScaleX="0.97" ScaleY="0.97"/>
                                    </Setter.Value>
                                </Setter>
                                <Setter TargetName="border" Property="RenderTransformOrigin" Value="0.5,0.5"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>


    <Grid>

        <!--=== ФОН ===-->
        <Image Source="/Images/IMG_8990.JPG"
               Stretch="UniformToFill"
               Panel.ZIndex="-1"/>

        <Grid Margin="16">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="12"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{DynamicResource QuestionLabel}" FontWeight="Bold" Margin="0,0,0,4" Foreground="White"/>
            <TextBox Grid.Row="1" x:Name="txtQuestion" AcceptsReturn="True" Height="80" TextWrapping="Wrap"
                     Style="{StaticResource WatermarkTextBox}" Tag="Enter the question you want to add"/>

            <TextBlock Grid.Row="3" Text="{DynamicResource AnswersLabel}" FontWeight="Bold" Margin="0,0,0,6" Foreground="White"/>

            <Grid Grid.Row="4" Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="rbCorrect0" GroupName="AnswersGroup" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2" x:Name="txtAnswer0" Style="{StaticResource WatermarkTextBox}" Tag="Answer 1..."/>
            </Grid>

            <Grid Grid.Row="5" Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="rbCorrect1" GroupName="AnswersGroup" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2" x:Name="txtAnswer1" Style="{StaticResource WatermarkTextBox}" Tag="Answer 2..."/>
            </Grid>

            <Grid Grid.Row="6" Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="rbCorrect2" GroupName="AnswersGroup" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2" x:Name="txtAnswer2" Style="{StaticResource WatermarkTextBox}" Tag="Answer 3..."/>
            </Grid>

            <Grid Grid.Row="7" Margin="0,2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="6"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <RadioButton x:Name="rbCorrect3" GroupName="AnswersGroup" VerticalAlignment="Center"/>
                <TextBox Grid.Column="2" x:Name="txtAnswer3" Style="{StaticResource WatermarkTextBox}" Tag="Answer 4..."/>
            </Grid>

            <!-- Новый блок: лимит времени на вопрос -->
            <Grid Grid.Row="9" Margin="0,10,0,13">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{DynamicResource TimeLimitLabel}" VerticalAlignment="Center" Foreground="White"/>
                <TextBox Grid.Column="2" x:Name="txtTimeLimit" Style="{StaticResource WatermarkTextBox}" Tag="e.g. 15" Margin="0,0,60,0"/>
            </Grid>

            <StackPanel Grid.Row="9" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock x:Name="txtStatus" VerticalAlignment="Center" Margin="0,0,12,0" Foreground="White"/>
                <Button x:Name="btnAddQuestion" Content="{DynamicResource AddQuestion}" Width="120" Margin="0,0,8,0" 
                        Style="{StaticResource ModernButton}" Click="btnAddQuestion_Click"/>
                <Button x:Name="btnDelete" Content="{DynamicResource DeleteQuestion}" Width="120" Margin="0,0,8,0"
                        Style="{StaticResource ModernButton}" Click="btnDelete_Click"/>
                <Button x:Name="btnStart" Content="{DynamicResource StartGame}" Width="120" 
                        Style="{StaticResource ModernButton}" Click="btnStart_Click"/>
            </StackPanel>


            <Border Grid.Row="10" Margin="0,12,0,0" BorderBrush="#FFD0D0D0" BorderThickness="1"
                    Padding="8" CornerRadius="4">
                <DockPanel>
                    <TextBlock Text="{DynamicResource AddedQuestions}" FontWeight="Bold" Margin="0,0,0,6"
                               DockPanel.Dock="Top" Foreground="White"/>
                    <ListBox x:Name="lstQuestions" ItemsSource="{Binding Questions}" DisplayMemberPath="Text"/>
                </DockPanel>
            </Border>

        </Grid>

    </Grid>

</Window>
